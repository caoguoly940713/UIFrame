<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:id="@+id/sl_user_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout style="@style/UserInputLayout">

                <TextView
                    style="@style/UserInputTitle"
                    android:text="工号：" />

                <TextView
                    android:id="@+id/tv_user_number"
                    style="@style/UserInputContent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                
                android:orientation="horizontal">

                <TextView
                    style="@style/UserInputTitle"
                    android:text="用户类型：" />

                <RadioGroup
                    android:id="@+id/rg_user_type"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb1_user_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:checked="true"
                        android:text="一般员工"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb2_user_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高管"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout style="@style/UserInputLayout">

                <TextView
                    style="@style/UserInputTitle"
                    android:labelFor="@+id/et_work_number"
                    android:text="工作证号：" />

                <EditText
                    android:id="@+id/et_work_number"
                    style="@style/UserInputContent"
                    android:inputType="text" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                
                android:gravity="center_vertical|start"
                android:text="个人信息"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <LinearLayout style="@style/UserInputLayout">

                <TextView
                    style="@style/UserInputTitle"
                    android:labelFor="@+id/et_user_name"
                    android:text="姓名：" />

                <EditText
                    android:id="@+id/et_user_name"
                    style="@style/UserInputContent"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                
                android:orientation="horizontal">

                <TextView
                    style="@style/UserInputTitle"
                    android:text="性别：" />

                <RadioGroup
                    android:id="@+id/rg_user_gender"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb1_user_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:checked="true"
                        android:text="未知"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb2_user_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:text="男"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/rb3_user_gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"
                        android:textSize="14sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout style="@style/UserInputLayout">

                <TextView
                    style="@style/UserInputTitle"
                    android:text="输入码：" />

                <TextView
                    android:id="@+id/user_input_code"
                    style="@style/UserInputContent" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/UserInputTitle"
                    android:text="出生日期：" />

                <TextView
                    android:id="@+id/tv_select_birth"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_perm_contact_calendar_black_24dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="隶属部门"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/UserInputTitle"
                    android:text="部门：" />

                <TextView
                    android:id="@+id/tv_select_org"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/album_ic_done_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/UserInputTitle"
                    android:text="岗位：" />

                <TextView
                    android:id="@+id/tv_select_post"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/other_department"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="分管部门"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/UserInputTitle"
                    android:text="部门：" />

                <TextView
                    android:id="@+id/tv_select_orgs"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="联系方式"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <LinearLayout
                style="@style/UserInputLayout"
                >

                <TextView
                    style="@style/UserInputTitle"
                    android:labelFor="@id/user_mobile"
                    android:text="手机号码：" />

                <EditText
                    android:id="@+id/user_mobile"
                    style="@style/UserInputContent"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout style="@style/UserInputLayout">

                <TextView
                    style="@style/UserInputTitle"
                    android:labelFor="@id/user_telephone"
                    android:text="办公电话：" />

                <EditText
                    android:id="@+id/user_telephone"
                    style="@style/UserInputContent"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                style="@style/UserInputLayout"
                >

                <TextView
                    style="@style/UserInputTitle"
                    android:labelFor="@id/user_email"
                    android:text="Email：" />

                <EditText
                    android:id="@+id/user_email"
                    style="@style/UserInputContent"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="系统登录信息"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <LinearLayout style="@style/UserInputLayout"
                >

                <TextView
                    style="@style/UserInputTitle"
                    android:labelFor="@id/user_login_name"
                    android:text="用户名：" />

                <EditText
                    android:id="@+id/user_login_name"
                    style="@style/UserInputContent"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout style="@style/UserInputLayout">

                <TextView
                    style="@style/UserInputTitle"
                    android:labelFor="@id/user_password"
                    android:text="登陆密码：" />

                <EditText
                    android:id="@+id/user_password"
                    style="@style/UserInputContent"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout style="@style/UserInputLayout"
                >

                <TextView
                    style="@style/UserInputTitle"
                    android:labelFor="@id/user_confirm"
                    android:text="确认密码：" />

                <EditText
                    android:id="@+id/user_confirm"
                    style="@style/UserInputContent"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:gravity="center_vertical"
                    android:text="密保问题："
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_pwd_protect"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="20dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout style="@style/UserInputLayout"
                >

                <TextView
                    style="@style/UserInputTitle"
                    android:labelFor="@id/et_protect_answer"
                    android:text="答案：" />

                <EditText
                    android:id="@+id/et_protect_answer"
                    style="@style/UserInputContent"
                    android:inputType="text" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:text="用户角色："
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="名称："
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="分级类型："
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="操作："
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <ListView
                android:id="@+id/lv_user_role"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_add_role"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:text="添加角色"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/clear_roles"
                    style="@style/Widget.AppCompat.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/blue"
                    android:gravity="center"
                    android:text="清空权限"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:labelFor="@id/et_user_desc"
                android:text="用户描述"
                android:textColor="@color/blue"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/et_user_desc"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                
                android:gravity="center"
                android:inputType="textMultiLine" />

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>