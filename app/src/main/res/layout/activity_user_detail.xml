<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="部门名称:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_orgname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="部门代码:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_orgcode"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="工号:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_userid"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="用户姓名:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="性别:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="用户类型:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="工作证号:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_cardid"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="维护时间:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="电话号码:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="手机号码:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_tel"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="E-mail:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="用户名:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_sysname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="用户描述:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_sysdesc"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="角色:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_sysrole"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="用户状态:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_sysstatus"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="启用日期:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <include layout="@layout/layout_item_divider_vertical"/>

                <TextView
                    android:id="@+id/tv_start_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="30dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:paddingLeft="9dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15dp" />
            </LinearLayout>

             <include layout="@layout/layout_item_divider_horizontal" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/normal_user_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_delete"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:drawableTop="@drawable/ic_delete_black_24dp"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/user_edit"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_edit_black_24dp"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/user_close"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_person_outline_black_24dp"
            android:gravity="center"
            android:text="注销"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/user_open"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_person_black_24dp"
            android:gravity="center"
            android:text="激活"
            android:textColor="@color/black" />

    </LinearLayout>
</LinearLayout>
