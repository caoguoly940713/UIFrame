<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_role_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/ic_check_box_outline_blank_black_24dp" />

    <include layout="@layout/layout_item_divider_vertical"/>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="名称"
            />

        <include layout="@layout/layout_item_divider_horizontal"/>

        <TextView
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="描述"/>

        <include layout="@layout/layout_item_divider_horizontal"/>

        <TextView
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:text="创建者"/>
    </LinearLayout>

    <include layout="@layout/layout_item_divider_vertical"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_role_name"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/black" />

        <include layout="@layout/layout_item_divider_horizontal"/>

        <TextView
            android:id="@+id/tv_role_desc"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/black" />

        <include layout="@layout/layout_item_divider_horizontal"/>

        <TextView
            android:id="@+id/tv_role_creator"
            android:layout_height="30dp"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/black" />
    </LinearLayout>

</LinearLayout>